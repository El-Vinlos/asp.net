@model List<baitap.ViewModel.CartItem>

<h2>Your Shopping Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@item.Total.ToString("C")</td>
                <td>
                    <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.ProductId">Remove</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <h3 class="text-end">Grand Total: @Model.Sum(x => x.Total).ToString("C")</h3>
}
